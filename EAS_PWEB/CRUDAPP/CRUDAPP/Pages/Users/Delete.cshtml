@page
@model CRUDAPP.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-danger">Delete User</h1>

<h4 class="text-secondary">Are you sure you want to delete this user?</h4>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Name)</dd>
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="User.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
