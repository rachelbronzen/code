@page
@model CRUDAPP.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<h1 class="text-primary">User Details</h1>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Name)</dd>
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>
</dl>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-warning">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
